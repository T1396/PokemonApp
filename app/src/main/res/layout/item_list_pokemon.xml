<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clPokemonListItem"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="6dp"
    android:background="@drawable/rounded_button_shape"
    android:backgroundTint="?attr/colorSurfaceContainerHighest"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/ripple">

    <TextView
        android:id="@+id/tvNr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:ems="3"
        android:maxEms="2"
        android:minEms="2"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPokemonName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvNr"
        app:layout_constraintEnd_toStartOf="@+id/ivPokemon"
        app:layout_constraintStart_toEndOf="@+id/tvNr"
        app:layout_constraintTop_toTopOf="@+id/tvNr" />

    <ImageView
        android:id="@+id/ivPokemon"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image_of_the_pokemon"
        android:scaleType="fitEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/pokemon_235" />
</androidx.constraintlayout.widget.ConstraintLayout>