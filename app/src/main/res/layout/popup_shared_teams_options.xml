<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:divider="?attr/dividerHorizontal"
    android:orientation="vertical"
    android:padding="16dp"
    android:showDividers="middle">

    <TextView
        android:id="@+id/tvCopy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:clickable="true"
        android:drawablePadding="10dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:padding="10dp"
        android:text="@string/copy_edit"
        app:drawableStartCompat="@drawable/baseline_file_copy_24"
        app:drawableTint="?attr/colorOnBackground" />

    <TextView
        android:id="@+id/tvRemoveAccess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:clickable="true"
        android:drawablePadding="10dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:padding="10dp"
        android:text="@string/remove_access"
        android:textColor="?attr/actionModeSplitBackground"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/baseline_remove_circle_24"
        app:drawableTint="?attr/colorError" />


</LinearLayout>