<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"> <!-- Sorgt für eine visuelle Rückmeldung bei Berührung -->

    <ImageView
        android:id="@+id/settingIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_menu_camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" /> <!-- Ersetzen Sie dies durch Ihr eigenes Icon -->

    <TextView
        android:id="@+id/settingTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Change Language"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/settingIcon"
        app:layout_constraintTop_toTopOf="parent" /> <!-- Ersetzen Sie dies durch Ihren eigenen Text -->

    <ImageView
        android:id="@+id/settingArrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:rotation="270"
        android:src="@drawable/fui_ic_apple_white_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/settingTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/settingTitle"
        app:srcCompat="@drawable/baseline_arrow_drop_down_24" />

</androidx.constraintlayout.widget.ConstraintLayout>