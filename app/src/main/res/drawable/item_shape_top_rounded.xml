<!-- res/drawable/constraint_layout_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Ausgewählter Zustand -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorSurfaceContainerHighest"/> <!-- Hintergrundfarbe wenn ausgewählt -->
            <stroke android:width="2dp" android:color="?attr/colorError"/> <!-- Rahmenfarbe und Breite -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <!-- Standardzustand -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorSurfaceContainerHighest"/>
            <corners android:topLeftRadius="12dp" android:topRightRadius="12dp"/>
        </shape>
    </item>
</selector>